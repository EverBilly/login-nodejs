<%- include('partials/header') -%>
<%- include('partials/navigate')-%>
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-10 col-xs-6">
                <h4>Roles</h4>
            </div>
            <div class="col-md-2 col-xs-6">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#registerRol">
                    Registrar Rol
                </button>
                <!-- Modal -->
                <div class="modal fade" id="registerRol" data-backdrop="static" tabindex="-1" aria-labelledby="registerRolLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="registerRolLabel">Registro</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/roles/add" method="post">
                                    <div class="input-group mb-3">
                                        <input name="name" type="text" class="form-control" placeholder="Name">
                                    </div>
                                    <div class="input-group mb-3">
                                        <input name="desc" type="text" class="form-control" placeholder="Description">
                                    </div>
                                    <button class="btn btn-primary">Save Rol</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <table class="table table-bordered table-hover table-dark mt-5 col-md-12">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
            
                <% if(roles){ %>
                <% let index = 0 %>
                <% roles.forEach(function(roles, index){ %>
                        <tr>
                            <td><%=++index%></td>
                            <td><%=roles.name%></td>
                            <td><%=roles.desc%></td>
                            <td>
                                <a href="/delete" class="btn btn-danger">Delete</a>
                                <a href="/update" class="btn btn-warning">Update</a>
                            </td>
                        </tr>
                <%})%>
                <% } %>
                </tbody>
                </table>
            </div>
        </div>
    </div>
<%- include('partials/footer') -%>